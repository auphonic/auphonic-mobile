@import 'nib'

div.player
  .ios &.expand, .android &.expand
    margin-top -16px

  .play-button
    position relative
    width 35px
    height 35px

    float left
    overflow visible
    margin-right 10px
    margin-bottom 10px

    border 1px solid #d7d7d7
    border-radius 50%
    background #fff
    box-shadow none

    a
      position absolute
      top -15px
      bottom -15px
      left -10px
      right -10px
      display block

      background-repeat no-repeat
      background-position center center

  div.waveform
    position relative
    height 37px
    margin-bottom 10px

    transform translate3d(0, 0, 0) // Fixes Mobile Safari artifacts
    box-shadow none

    div.line
      width 100%
      height 37px
      border-radius 3px
      background rgba(0, 0, 0, 0.1)

    img
      width 100%
      height 37px

    div.position
      position absolute
      left 0
      top 0
      bottom 0
      width 0

      background rgba(0, 0, 0, 0.15)

  div.player-details
    position relative
    overflow hidden
    white-space nowrap
    line-height 1.2em
    transform translate3d(0, 0, 0)

    div.current-time
      float left

    div.duration
      float right

    div.chapter-mark
      position absolute
      top 0
      bottom 0
      left 75px
      right 75px
      text-align center
      overflow ellipsis

      transition-property opacity, -webkit-transform
      transition-timing-function cubic-bezier(.2, .14, .25, .81), ease-in-out
      transition-duration 350ms
      opacity 1
      transform translate3d(0, 0, 0)

      &.right
        opacity 0
        transform translate3d(50%, 0, 0)

      &.left
        opacity 0
        transform translate3d(-50%, 0, 0)

      &.fade
        opacity 0
