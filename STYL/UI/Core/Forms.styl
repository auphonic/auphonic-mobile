@import 'nib'
@import 'Font'

input, textarea, select
  display block
  width 100%
  margin 0
  padding 11px 10px

  font-size 1em
  color $color
  outline none

  -webkit-appearance none
  border 0

  .ios &
    border-radius 10px // Needed so first/last elements don't overlay the container

  div.main ul li &.right.clearable-visible
    padding-right 30px

div.clearable
  position absolute
  right 0
  top 0
  bottom 0
  width 27px
  background-position left center
  background-repeat no-repeat

textarea
  resize none
  padding 0
  width 100%

textarea.autogrow
    overflow-y hidden

// Checkbox, losely based on http://vxjs.org/switch.html
.checkbox
  width 77px
  margin-top -6px
  overflow hidden
  border 1px solid rgba(151, 151, 151, 0.5)

  .ios &
    border-radius 20px

  > div
    position relative
    height 28px
    width 79px

    cursor pointer
    overflow hidden

    .ios &
      border-radius 20px
      box-shadow inset 0 1px 3px #bababa, inset 0 12px 3px 2px rgba(232, 232, 232, 0.5)
      -webkit-mask-size 79px 28px

    .android &
      box-shadow inset 0 1px 3px #bababa

    input[type=checkbox]
      display none

    & > .left
      z-index 2
      position absolute
      top 0
      bottom 0
      left 0
      right 0

      transition -webkit-transform 200ms ease-in-out
      transform translate3d(-100%, 0, 0)

      border-top-right-radius 0
      border-bottom-right-radius 0

      background-color #333

      .ios &
        box-shadow inset 0 1px 2px #333, inset 0 12px 3px 2px rgba(104, 104, 104, 0.50)

    & > .thumb
      z-index 3
      position relative
      width 28px
      height 28px
      top -1px
      bottom -1px
      left -1px
      right -1px
      display block
      font-size 0.9em

      transition -webkit-transform 200ms ease-in-out
      transform translate3d(0, 0, 0)

      border solid 1px rgba(151, 151, 151, 0.5)
      background-color #cecece
      background-image linear-gradient(top, #cecece, #fbfbfb)

      .ios &
        border-radius 50%
        box-shadow inset 0 2px 1px rgba(255, 255, 255, 0.5), inset 0 -2px 1px rgba(255, 255, 255, 0.5)

      &:before
        content attr(data-on)
        position absolute
        top 7px
        left -70px
        right 0
        color #fff
        font-weight bold
        text-align center
        text-shadow rgba(0, 0, 0, 0.5) 0 -1px 0

        .android &
          left -77px

      &::after
        content attr(data-off)
        position absolute
        top 7px
        left 33px
        right 0
        color #888
        text-align center
        font-weight bold

        .android &
          left 40px

    &:hover > .thumb
      background-image none

// Select
select.empty
  opacity 0

div.main ul li span.right.placeholder
  pointer-events none
  text-align left

div.main ul li select.right
  height 41px // This is required for fade-out animations
  padding-top 0
  padding-bottom 0
