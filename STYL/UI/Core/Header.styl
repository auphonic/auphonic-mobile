@import 'nib'

$header-height = 44px
$border-bottom = 1px
$border-top = 1px

div.headerBackground, header
  z-index 11
  position absolute
  top 0
  left 0
  right 0
  height $header-height - $border-bottom - $border-top

  .android &
    position fixed

div.headerBackground
  z-index 10
  background-color #111

  .android &
    display none

header
  border-bottom #000 $border-bottom solid
  background-color #444

  .ios &
    border-top #787878 $border-top solid
    border-top-right-radius 4px
    border-top-left-radius 4px
    background-image linear-gradient(top, #555 0%, #111 100%)
    box-shadow 0 1px 10px rgba(0, 0, 0, 0.5)

  .android &
    background-color #000

  h1
    z-index 12
    top 0
    left 75px
    right 75px

    position absolute
    margin 0
    padding 0
    height $header-height - 2px
    line-height $header-height - 2px

    font-size 19px
    font-weight bold
    overflow ellipsis
    text-transform none
    color #e9e9e9

    .ios &
      text-shadow rgba(0, 0, 0, 1) 0 -1px 0
      text-align center

      span
        display none

    .android &
      font-weight 500
      font-size 18px
      left 10px

      span
        float left
        width 36px
        height $header-height - 2px
        display block
        margin-right 10px
        background-position center 8px
        background-repeat no-repeat

    transition-property opacity, -webkit-transform
    transition-timing-function cubic-bezier(.2, .14, .25, .81), ease-in-out
    transition-duration 400ms
    opacity 1
    transform translate3d(0, 0, 0)

    &.right
      opacity 0

      .ios &
        transform translate3d(100%, 0, 0)

    &.left
      opacity 0

      .ios &
        transform translate3d(-100%, 0, 0)

    &.fade
      opacity 0

  a
    position absolute
    top 0
    bottom 0
    width 90px
    text-decoration none

    transition-property opacity, -webkit-transform
    transition-timing-function ease-in-out
    transition-duration 400ms

    opacity 0

    &.hit
      bottom -50px

    &.button-left
      left 0
      opacity 1
      transform translate3d(0, 0, 0)

      // Back button is invisible on Android
      .android &
        display none

      &.right
        opacity 0
        transform translate3d(150px, 0, 0)

      &.left
        opacity 0
        transform translate3d(-150px, 0, 0)

      &.fade
        opacity 0

      .button
        left 5px

    &.button-right
      right 0

      transition-timing-function ease-in

      &.show
        opacity 1

      .button
        width 45px
        right 5px
        padding 0

        &.big
          width 55px

    .button
      position absolute
      top 5px
      bottom 6px
      width 55px
      line-height $header-height - 16px
      height $header-height - 15px

      display block
      padding 0 5px
      min-width auto

      .ios &
        border-radius 5px

      font-size 12px
      overflow ellipsis
      color #e9e9e9
      text-shadow rgba(0, 0, 0, 0.8) 0 -1px 0

      border-style solid
      border-width 1px
      border-color #111 #222 #333
      box-shadow inset 0 1px 1px #666

      &.active, &.selected
        box-shadow inset 0 -1px 1px #111

      &.small
        font-size 9px
